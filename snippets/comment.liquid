<div class="user_img"><img src="//www.gravatar.com/avatar/{{ comment.email }}?d={{ 'gravatar-user-default.png' | asset_url }}?s=70" alt="{{ comment.author }}" /></div>
<div class="com_desc">
  <div class="clearfix">
    <h5>{{ comment.author }}</h5>
    <div class="datetxt">
      <span class="fa fa-calendar"></span><time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">{{ comment.created_at | date: '%b %d, %Y' }}</time>
    </div>
  </div>
  {{ comment.content }}   
</div>